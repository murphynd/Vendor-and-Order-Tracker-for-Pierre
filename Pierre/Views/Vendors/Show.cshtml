@using Pierre.Models;
@{
  Layout = "_Layout";
}

<h3>Here are all the Orders for @Model["vendor"].Name:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li>@order.Date</li>
  <ul>
  <li>@order.Title</li>
  <li>@order.Description</li>
  <li>@order.Price</li>
  </ul>

}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order by this vendor</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>